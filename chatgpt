import pygame
import time

# Inicialização
pygame.init()

# Tela
WIDTH, HEIGHT = 800, 400
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Corrida Reta")
clock = pygame.time.Clock()
FPS = 60

# Cores
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (255, 50, 50)
GREEN = (50, 255, 50)
GRAY = (200, 200, 200)

# Início e fim da pista
start_x = 100
finish_x = 700

# Carros
car_width = 40
car_height = 20

# Jogador
car_x = start_x
car_y = 150
car_speed = 0
acceleration = 0.2
friction = 0.05
max_speed = 5

# Bot
bot_x = start_x
bot_y = 220
bot_speed = 2.5
bot_finished = False
bot_time = None

# Tempo
start_time = time.time()
player_finished = False
player_time = None

# Funções auxiliares
def draw_track():
    pygame.draw.line(screen, GRAY, (start_x, 0), (start_x, HEIGHT), 5)
    pygame.draw.line(screen, GRAY, (finish_x, 0), (finish_x, HEIGHT), 5)

def draw_car(x, y, color):
    pygame.draw.rect(screen, color, (x, y, car_width, car_height))

def show_result(winner, t):
    font = pygame.font.SysFont(None, 48)
    msg = font.render(f"{winner} venceu!", True, BLACK)
    time_msg = font.render(f"Tempo: {t:.2f}s", True, BLACK)
    screen.blit(msg, (WIDTH // 2 - msg.get_width() // 2, 50))
    screen.blit(time_msg, (WIDTH // 2 - time_msg.get_width() // 2, 100))

# Loop principal
running = True
winner_announced = False

while running:
    clock.tick(FPS)
    screen.fill(WHITE)
    draw_track()

    # Eventos
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Input do jogador
    keys = pygame.key.get_pressed()
    if keys[pygame.K_RIGHT]:
        car_speed += acceleration
    if keys[pygame.K_LEFT]:
        car_speed -= acceleration

    # Aplicar atrito
    if not any([keys[pygame.K_RIGHT], keys[pygame.K_LEFT]]):
        if car_speed > 0:
            car_speed -= friction
            if car_speed < 0: car_speed = 0
        elif car_speed < 0:
            car_speed += friction
            if car_speed > 0: car_speed = 0

    # Limita a velocidade
    car_speed = max(-max_speed, min(max_speed, car_speed))

    # Atualiza posição
    car_x += car_speed
    if not bot_finished:
        bot_x += bot_speed

    # Verifica se o jogador terminou
    if car_x + car_width >= finish_x and not player_finished:
        player_finished = True
        player_time = time.time() - start_time

    # Verifica se o bot terminou
    if bot_x + car_width >= finish_x and not bot_finished:
        bot_finished = True
        bot_time = time.time() - start_time

    # Desenhar carros
    draw_car(car_x, car_y, RED)
    draw_car(bot_x, bot_y, GREEN)

    # Mostrar resultado
    if player_finished and bot_finished and not winner_announced:
        if player_time < bot_time:
            winner = "Você"
            result_time = player_time
        elif bot_time < player_time:
            winner = "Bot"
            result_time = bot_time
        else:
            winner = "Empate"
            result_time = player_time
        winner_announced = True

    if winner_announced:
        show_result(winner, result_time)

    pygame.display.flip()

pygame.quit()
